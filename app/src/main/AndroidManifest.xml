<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grability.Activities">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActSplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="unspecified"
            android:configChanges="orientation"
            android:launchMode="singleInstance"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.grability.Activities.ActAppList"
            android:launchMode="singleInstance"
            android:theme="@style/AnimationTheme"/>
        <activity android:name="com.grability.Activities.ActAppResume"
            android:launchMode="singleInstance"
            android:theme="@style/AnimationTheme"/>
        <activity android:name="com.grability.Activities.ActCategories"
            android:launchMode="singleInstance"
            android:theme="@style/AnimationTheme"
            >

        </activity>
    </application>

</manifest>
